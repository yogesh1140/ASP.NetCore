
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Working -@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootswatch/dist/yeti/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div id="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <img class="dp" src="~/img/18056975_796491123850220_6773583011308771600_n.jpg" alt="">
            <span id="username">Stella</span>
            <span>@User.Identity.Name</span>
        }
        <ul class="nav flex-column nav-pills">
            <li class="nav-item active"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="About">About</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Trips">Trips</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Logout">Logout</a></li>


            }

        </ul>
    </div>
    <div id="wrapper">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <ul class="nav navbar-nav">

                <li class="nav-item">
                    <button id="sidebartoggle" class="btn btn-primary">
                        <i class="fa fa-angle-left"></i>
                    </button>

                </li>
            </ul>
            <a asp-controller="App" asp-action="Index" class="navbar-brand mr-auto">Working</a>



            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a href="#" class="btn btn-sm btn-info">
                        <i class="fa fa-save">Save</i>
                    </a>
                </li>

            </ul>
            <ul class="nav navbar-nav">

                <li class="nav-item">
                    <a href="#" class="btn btn-sm btn-info">
                        <i class="fa fa-print">Print</i>
                    </a>
                </li>
            </ul>


        </nav>

        <div id="main" class="container-fluid">

            @RenderBody()
        </div>
        <div class="container-fluid" style="z-index:0">
            <nav class="navbar-nav navbar-dark bg-dark fixed-bottom">
                <p class="text-center text-info">&copy;2015 Working</p>

            </nav>
        </div>

    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    @RenderSection("scripts", false)

</body>
</html>